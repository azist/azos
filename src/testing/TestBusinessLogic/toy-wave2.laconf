      }

      user
      {
        name="OauthApp1"
        description="OAuth app1"
        id="app1"
        password='{"alg":"MD5","fam":"Text","hash":"ZcrDK120Iwj08Qqfzvz95w==","salt":"e0K7BA4Ylby2kWAp3nCR3A9jSw=="}'
        status="User"
        rights
        {
